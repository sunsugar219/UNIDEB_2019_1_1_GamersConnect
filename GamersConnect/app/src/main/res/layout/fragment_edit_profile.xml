<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_profile"
    android:background="#311B92"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageView_edit_profile"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="200dp"
        tools:srcCompat="@tools:sample/avatars"
        />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toPickPic1"
            android:src="@drawable/pic1"
            android:layout_column="0"
            android:layout_row="0"
            android:clickable="true"
            android:focusable="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toPickPic2"
                android:src="@drawable/pic2"
                android:layout_column="1"
                android:layout_row="0"
                android:clickable="true"
                android:focusable="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toPickPic3"
                android:src="@drawable/pic3"
                android:layout_column="2"
                android:layout_row="0"
                android:clickable="true"
                android:focusable="true" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toPickPic4"
                android:src="@drawable/pic4"
                android:layout_column="0"
                android:layout_row="1"
                android:clickable="true"
                android:focusable="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toPickPic5"
                android:src="@drawable/pic5"
                android:layout_column="1"
                android:layout_row="1"
                android:clickable="true"
                android:focusable="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toPickPic6"
                android:src="@drawable/pic6"
                android:layout_column="2"
                android:layout_row="1"
                android:clickable="true"
                android:focusable="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toPickPic7"
                android:src="@drawable/pic7"
                android:layout_column="0"
                android:layout_row="2"
                android:clickable="true"
                android:focusable="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toPickPic8"
                android:src="@drawable/pic8"
                android:layout_column="1"
                android:layout_row="2"
                android:clickable="true"
                android:focusable="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toPickPic9"
                android:src="@drawable/pic9"
                android:layout_column="2"
                android:layout_row="2"
                android:clickable="true"
                android:focusable="true"/>
        </GridLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_avatar_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Avatar" />

    <EditText
        android:id="@+id/editText_profile_personName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="User Name" />

    <Button
        android:id="@+id/button_change_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Name" />

    <EditText
        android:id="@+id/editText_email_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="email" />

    <Button
        android:id="@+id/button_change_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Email" />

    <EditText
        android:id="@+id/editText_pwd_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:text="password" />

    <Button
        android:id="@+id/button_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password" />
</LinearLayout>